        // è§„å®šä¸¤ä¸ªåŠ è½½è·¯å¾„
        let paths = vec![
            PathBuf::from("rules"),  // å†…ç½®ç›®å½•
            PathBuf::from("custom"), // ç”¨æˆ·è‡ªå®šä¹‰ç›®å½•
        ];

        for path in paths {
