{
  "$schema": ".././tauri.schema.json",
  "productName": "SafeMask",
  "version": "1.1.0",
  "identifier": "com.aitobyte.safemask",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://127.0.0.1:18924",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "SafeMask - 极致性能隐私脱敏控制台",
        "width": 1024,
        "height": 720,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "theme": "Dark"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "icons/**/*",
      "rules/**/*",
      "custom/**/*"
    ],
    "windows": {
      "wix": {
        "language": "zh-CN" 
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "XiaoSheng",
    "copyright": "Copyright © 2026 XiaoSheng"

  },
  "plugins": { 

  }
}